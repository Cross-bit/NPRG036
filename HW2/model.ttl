@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <https://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix time: <http://www.w3.org/2006/time#> .

@prefix ex: <http://example.org/vocabulary/> .

# Třídní rozvrh

ex:Timetable a rdfs:Class ;
	rdfs:label "Třídní rozvrh"@cs ;
	rdfs:comment "Představuje rozvrh konkrétní třídy základní školy."@cs .

ex:AcademicalYear a rdf:Property ;
	rdfs:label "Akademický rok"@cs ;
	rdfs:comment "Roky, v kterých je daný rozvrh platný."@cs ;
	rdfs:domain ex:Timetable ;
	rdfs:range ""@cs . # todo 2022/2023 blanknode? rozepsat?

ex:ScheduleVersion a rdf:Property ;
	rdfs:label "Verze rozvrhu"@cs ;
	rdfs:comment "Číslo označující aktuální verzi rozvrhu."@cs ;
	rdfs:domain ex:Timetable ;
	rdfs:range xsd:decimal .

ex:PlannedLesson a rdf:Property ;
	rdfs:label "Naplánovaná hodina"@cs ;
	rdfs:comment "Náplánovaná hodina v třídním rozvrhu."@cs ;
	rdfs:domain ex:Timetable ;
	rdfs:range  ex:Lesson .

ex:BelongingClass a rdf:Property ;
	rdfs:label "Příslušná třída"@cs ;
	rdfs:comment "Třída, které rozvrh přísluší."@cs ;
	rdfs:domain ex:Timetable ;
	rdfs:range  ex:Class .

# Třída

ex:Class a rdfs:Class ;
	rdfs:label "Třída"@cs ;
	rdfs:comment "Představuje konkrétní fyzickou třídu žáků základní školy."@cs .

ex:ClassYear a rdfs:Property ;
	rdfs:label "Ročník třídy"@cs ;
	rdfs:comment "Ročník, ve kterém se třída nachází."@cs ;
	rdfs:domain ex:Class ;
	rdfs:range  xsd:integer .
	
ex:ClassCode a rdfs:Property ;
	rdfs:label "Kódové označení třídy"@cs ;
	rdfs:comment "Kódové označení třídy písmenem."@cs ;
	rdfs:domain ex:Class ;
	rdfs:range  xsd:string . # todo foaf číselník?

ex:ClassTeacher a rdfs:Property ;
	rdfs:label "Třídní učitel"@cs ;
	rdfs:comment "Učitel, který za třídu zodpovídá."@cs ;
	rdfs:domain ex:Class ;
	rdfs:range  ex:Teacher .

ex:StudentAttends a rdfs:Property ;
	rdfs:label "Žák dochází"@cs ;
	rdfs:comment "Žáci, kteří přísluší dané třídě."@cs ;
	rdfs:domain ex:Class ;
	rdfs:range  ex:Student .

ex:ClassTimetable a rdfs:Property ;
	rdfs:label "Třídě přísluší třídní rozvrh.";
	rdfs:comment "Třídní rozvrh příslušící dané třídě."@cs ;
	rdfs:domain ex:Class ;
	rdfs:range  ex:Timetable .

# Hodina

ex:Lesson a rdfs:Class ;
	rdfs:label "Hodina"@cs ;
	rdfs:comment "Reprezentuje konkrétní vyučovací hodinu v třídním rozvrhu."@cs .

# [Identifikátor hodiny]
# 	Vlastnost: id_hodiny
# 	Typ: Řetězec
# 	Jméno: ID hodiny
# 	Popis: Jedonoznačné identifikační číslo hodiny. 
# 	Příklad: 456376

# [URL Zoom meetingu pro hodinu]
# 	Vlastnost: url_hodiny
# 	Typ: URL
# 	Jméno: Zoom meeting URL
# 	Popis: URL Zoom meetingu pro online výuku hodiny.
# 	Příklad: https://zoom.com/howefhowodsdh

# [Vazba:Probíhá v časovém slotu]
# 	Vazba: probíhá
# 	Typ: Časový slot
# 	Jméno: Časový slot hodiny
# 	Popis: Hodina probíhající v daném časovém slotu.

# [Vazba:Naplánováno v třídním rozvrhu]
# 	Vazba: naplánováno
# 	Typ: Třídní rozvrh
# 	Jméno: Hodina v třídnm rozvrhu
# 	Popis: Hodina je naplnována v třídním rozvrhu.

# [Vazba:Koná se v učebně]
# 	Vazba: koná_se
# 	Typ: Učebna
# 	Jméno: Hodina se koná v učebně
# 	Popis: Daná hodina se odehrává v dané učebně.

# [Vazba:Vyučuje se předmět]
# 	Vazba: vyučuje_se 
# 	Typ: Předmět
# 	Jméno: Předmět hodiny
# 	Popis: Danou hodinu se vyučuje daný předmět.

# Časový slot

ex:TimeSlot a rdfs:Class ;
	rdfs:label "Časový slot"@cs ;
	rdfs:comment "Reprezentuje časové okno od-do, v němž probíhá výuka."@cs ;
	rdfs:subClassOf time:GeneralDateTimeDescription .

# [Začátek časového slotu]
# 	Vlastnost: začátek
# 	Typ: Čas
# 	Jméno: Začátek časového slotu
# 	Popis:  Čas, kdy začíná časový slot.
# 	Příklad: 08:00:00

# [Konec časového slotu]
# 	Vlastnost: konec
# 	Typ: Čas
# 	Jméno: Konec časového slotu
# 	Popis:  Čas, kdy končí časový slot.
# 	Příklad: 09:00:00

# [Den v týdnu]
# 	Vlastnost: den_v_týdnu
#	time:dayOfWeek time:DayOfWeek (time:Monday/time:Tuesday/time:Wednesday/time:Thursday/time:Friday/time:Saturday/time:Sunday)

# Učebna

ex:Classroom a rdfs:Class ;
	rdfs:label "Učebna"@cs ;
	rdfs:comment "Reprezentuje učební místnost, v níž probíhá výuka na základní škole."@cs .

# [Identifikátor třídy]
# 	Vlastnost: id_třídy
# 	Typ: Řetězec
# 	Jméno: ID třídy
# 	Popis: Prostředek ke vzájemnému odlišení jednotlivých učeben.
# 	Příklad: S9

# [Kapacita učebny]
# 	Vlastnost: kapacita_učebny
# 	Typ: Celé číslo
# 	Jméno: Kapacita učebny
# 	Popis: Označuje maximální počet osob přítomných v danou chvíli v dané učebně.
# 	Příklad: 30

# [Vazba:Hodina se koná v učebně]
# 	Vazba: koná_se
# 	Typ: Hodina
# 	Jméno: Hodina konající se v učebně
# 	Popis: V učebně probíhá daná hodina.

# Předmět

ex:Subject a rdfs:Class ;
	rdfs:label "Předmět"@cs ;
	rdfs:comment "Reprezentuje předmět vyučující se na základní škole."@cs .

# [Identifikátor předmětu] 
# 	Vlastnost: id_předmětu
# 	Typ: Řetězec
# 	Jméno: ID předmětu
# 	Popis: Prostředek ke vzájemnému odlišení jednotlivých předmětů.
# 	Příklad: MAT

# [Název předmětu]
# 	Vlastnost: název
# 	Typ: Řetězec
# 	foaf:name

# [Vazba:Vyučuje učitel]
# 	Vazba: týká_se
# 	Typ: Učitel
# 	Jméno: Vyučuje učitel
# 	Popis: Předmět, jenž se týká daného učitele.

# [Vazba:Vyučuje se]
# 	Vazba: vyučuje_se
# 	Typ: Hodina
# 	Jméno: Hodina daného předmětu
# 	Popis: Předmět se vyučuje v rámci dané hodiny.

# Učitel

ex:Teacher a rdfs:Class ;
	rdfs:label "Učitel"@cs ;
	rdfs:comment "Reprezentuje jednotlivé učitele dané základní školy."@cs .

# [Identifikátor učitele]
# 	Vlastnost: id_učitele
# 	Typ: Řetězec
# 	Jméno: ID učitele
# 	Popis: Prostředek ke vzájemnému odlišení jednolivých učitelů.

# [Jméno učitele]
# 	Vlastnost: jméno
#	foaf:name

# [Zkušenosti učitele]

ex:TeacherExperience a rdf:Property ;
	rdfs:label "Zkušenosti učitele"@cs ;
	rdfs:comment "Letité zkušenosti učitele, započítává se každý odučený celý školní rok."@cs ;
	rdfs:domain ex:Teacher ;
	rdfs:range xsd:integer .

# [Vazba:Třídní učitel]
# 	Vazba: třídní_učitel
# 	Typ: Třída
# 	Jméno: Třídní učitel 
# 	Popis: Třída, za níž učitel zodpovídá.

# [Vazba:Vyučuje]
# 	Vazba: vyučuje
# 	Typ: Předmět
# 	Jméno: Vyučovaný předmět
# 	Popis: Předmět, jenž učitel vyučuje.

# Žák

ex:Student a rdfs:Class ;
	rdfs:label "Žák"@cs ;
	rdfs:comment "Reprezentuje žáky dané základní školy."@cs .

# [Identifikátor žáka]
# 	Vlastnost: id_žáka
